# Environment Variables Template
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
APP_NAME=Naturaz
APP_URL=http://localhost:3000
API_URL=http://localhost:3000/api/v1

# API Gateway
API_GATEWAY_PORT=3000
API_GATEWAY_SECRET=your-gateway-secret-key-here

# Database - PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=naturaz
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=naturaz_db
DATABASE_URL=postgresql://naturaz:your-postgres-password@localhost:5432/naturaz_db

# Database - MongoDB
MONGODB_URI=mongodb://localhost:27017/naturaz
MONGODB_USER=naturaz
MONGODB_PASSWORD=your-mongodb-password

# Database - Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://:your-redis-password@localhost:6379

# Elasticsearch
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elastic-password

# JWT Authentication
JWT_SECRET=your-jwt-secret-key-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OAuth (Google)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# OAuth (Facebook)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3000/auth/facebook/callback

# Payment Gateways - Bangladesh
# bKash
BKASH_APP_KEY=your-bkash-app-key
BKASH_APP_SECRET=your-bkash-app-secret
BKASH_USERNAME=your-bkash-username
BKASH_PASSWORD=your-bkash-password
BKASH_BASE_URL=https://tokenized.sandbox.bka.sh/v1.2.0-beta

# Nagad
NAGAD_MERCHANT_ID=your-nagad-merchant-id
NAGAD_MERCHANT_NUMBER=your-nagad-merchant-number
NAGAD_PUBLIC_KEY=your-nagad-public-key
NAGAD_PRIVATE_KEY=your-nagad-private-key
NAGAD_BASE_URL=https://api.mynagad.com

# SSL Commerz
SSLCOMMERZ_STORE_ID=your-store-id
SSLCOMMERZ_STORE_PASSWORD=your-store-password
SSLCOMMERZ_IS_LIVE=false

# Email Service
EMAIL_SERVICE=sendgrid
EMAIL_FROM=noreply@naturaz.com.bd
SENDGRID_API_KEY=your-sendgrid-api-key
# Or AWS SES
AWS_SES_ACCESS_KEY_ID=your-aws-access-key
AWS_SES_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_SES_REGION=ap-south-1

# SMS Service
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Storage - AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=naturaz-uploads
AWS_S3_PUBLIC_URL=https://naturaz-uploads.s3.ap-south-1.amazonaws.com

# CDN
CDN_URL=https://cdn.naturaz.com.bd

# Google Maps
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Shipping Partners
# Pathao
PATHAO_CLIENT_ID=your-pathao-client-id
PATHAO_CLIENT_SECRET=your-pathao-client-secret
PATHAO_BASE_URL=https://hermes-api.p-stageenv.xyz/api/v1

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token

# Error Tracking
SENTRY_DSN=your-sentry-dsn

# RabbitMQ / Message Queue
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_USER=naturaz
RABBITMQ_PASSWORD=your-rabbitmq-password

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3000/api/v1
NEXT_PUBLIC_APP_NAME=Naturaz
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Mobile App
EXPO_PUBLIC_API_URL=http://localhost:3000/api/v1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Session
SESSION_SECRET=your-session-secret-key

# Encryption
ENCRYPTION_KEY=your-32-char-encryption-key-here

# Tree Planting API (if using third-party service)
TREE_PLANTING_API_KEY=your-tree-api-key
TREE_PLANTING_API_URL=https://api.treeplanting.org

# Carbon Calculator API
CARBON_API_KEY=your-carbon-api-key
